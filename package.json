{
  "name": "gaiter-guard-monorepo",
  "private": true,
  "workspaces": ["backend", "frontend"],
  "scripts": {
    "dev:backend": "cd backend && bun --watch src/server.ts",
    "start:backend": "cd backend && bun src/server.ts",
    "db:generate": "cd backend && bun drizzle-kit generate",
    "db:migrate": "cd backend && bun run scripts/migrate.ts"
  }
}
